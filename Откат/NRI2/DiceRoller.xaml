<Window x:Class="NRI.DiceRoller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfanimated="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:NRI"
        mc:Ignorable="d"
        Title="DiceRoller" Height="780" Width="1358">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Width="1367" Height="764">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource CustomFont}" Text="Введите количество кубиков:" FontSize="18" Margin="177,59,0,663" HorizontalAlignment="Left" TextAlignment="Center" Width="1183"/>
            <StackPanel HorizontalAlignment="Left" Width="150" Margin="342,100,0,0" Height="636" VerticalAlignment="Top">
                <Image Source="\image\D6.jpg" Height="65" Width="150"/>
                <TextBox x:Name="DiceCountTextBox_D6" Width="86" Margin="0,5" Height="18"/>
                <Button Style="{StaticResource CustomFont}" Content="Бросить кубики" Width="130" Click="RollDice_D6_Click" Margin="0,5" Height="21"/>
                <ItemsControl Style="{StaticResource CustomFont}" ItemStringFormat="Center"  x:Name="DiceItemsControl_D6" Height="380" Width="107"/>
                <TextBlock Style="{StaticResource CustomFont}" Margin="0,5" x:Name="ResultsTextBlock_D6" FontSize="14" Height="41" Width="150"/>
                <TextBlock Style="{StaticResource CustomFont}" x:Name="ResultsTextBlock_D6_summ" FontSize="14" Height="41" Width="150"/>
                <Button Style="{StaticResource CustomFont}" Margin="0,5" Content="Очистить сумму" Width="130" Click="Clear_Result_Text_Block_D6" Height="21"/>
            </StackPanel>
            <StackPanel Style="{StaticResource CustomFont}"  HorizontalAlignment="Left" Width="140" Margin="988,100,0,0" Height="627" VerticalAlignment="Top">
                <Image Source="\image\D20.jpg" Height="65"/>
                <TextBox Style="{StaticResource CustomFont}" x:Name="DiceCountTextBox_D20" Width="86" Margin="0,5" Height="18"/>
                <Button Style="{StaticResource CustomFont}" Content="Бросить кубики" Width="130" Click="RollDice_D20_Click" Margin="0,5" Height="21"/>
                <ItemsControl Style="{StaticResource CustomFont}" ItemStringFormat="Center"  x:Name="DiceItemsControl_D20" Height="380" Width="131"/>
                <TextBlock Style="{StaticResource CustomFont}" Margin="0,5" x:Name="ResultsTextBlock_D20" FontSize="14" Height="40" Width="150"/>
                <TextBlock Style="{StaticResource CustomFont}" x:Name="ResultsTextBlock_D20_summ" FontSize="14" Height="40" Width="150"/>
                <Button Style="{StaticResource CustomFont}" Margin="0,5" Content="Очистить сумму" Width="130" Click="Clear_Result_Text_Block_D20" Height="21"/>
            </StackPanel>
            <Label Style="{StaticResource CustomFont}"  Grid.Row="0" Background="#00677E" Content="Броски кубиков" FontSize="32" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="177,0,0,705" Height="59" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="1183"/>
            <StackPanel Grid.Column="0" Background="#483C32" Margin="0,0,0,-18" HorizontalAlignment="Left" Width="177" Height="576" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" >
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.028"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.146"/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <Button Style="{StaticResource CustomFont}" Content="Вернуться на главную" Background="#00A86B"  FontSize="14" Margin="0,30,0,0" BorderBrush="#002800" Cursor="Hand" Click="MainMenu_Click" Foreground="#0A0A0A" Width="174"/>
                <Button Style="{StaticResource CustomFont}" Content="Выйти с аккаунта" Background="#00A86B"  FontSize="14" Margin="0,30,0,0" BorderBrush="#002800" Cursor="Hand" Foreground="#0A0A0A" Click="Exist_click"/>
                <Button Style="{StaticResource CustomFont}" Content="Завершить работу" Background="#00A86B" Margin="0,30,0,0"  FontSize="14" BorderBrush="#002800" Cursor="Hand" Click="Showdown_Click" Foreground="#0A0A0A"/>
                <Image Margin="0,200" wpfanimated:ImageBehavior.AnimatedSource="\image\Roll_initiative.gif"
                wpfanimated:ImageBehavior.RepeatBehavior="1"
                wpfanimated:ImageBehavior.AnimateInDesignMode="False"
                wpfanimated:ImageBehavior.AutoStart="True"              
                Height="145" Width="156" />
            </StackPanel>
            <Label Grid.Row="0" Background="Black"  Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="210" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="177" Margin="0,0,0,558">
                <Image wpfanimated:ImageBehavior.AnimatedSource="image\Intellect_dice.gif"
                wpfanimated:ImageBehavior.RepeatBehavior="1"
                wpfanimated:ImageBehavior.AnimateInDesignMode="False"
                wpfanimated:ImageBehavior.AutoStart="True"              
                Height="206" Width="171" />
            </Label>
            <StackPanel HorizontalAlignment="Left" Width="200" Margin="1148,100,0,0" Height="627" VerticalAlignment="Top">
                <Image Style="{StaticResource CustomFont}" Source="/image/D100.jpg" Height="65" Width="160"/>
                <TextBox Style="{StaticResource CustomFont}" x:Name="DiceCountTextBox_D100" Width="86" Margin="0,5" Height="18"/>
                <Button Style="{StaticResource CustomFont}" Content="Бросить кубики" Width="130" Click="RollDice_D100_Click" Margin="0,5" Height="21"/>
                <ItemsControl Style="{StaticResource CustomFont}" ItemStringFormat="Center"  x:Name="DiceItemsControl_D100" Height="380" Width="192"/>
                <TextBlock Style="{StaticResource CustomFont}" Margin="0,5" x:Name="ResultsTextBlock_D100" FontSize="14" Height="38" Width="198"/>
                <TextBlock Style="{StaticResource CustomFont}" x:Name="ResultsTextBlock_D100_summ" FontSize="14" Height="40" Width="198"/>
                <Button Style="{StaticResource CustomFont}" Margin="0,5" Content="Очистить сумму" Width="130" Click="Clear_Result_Text_Block_D100" Height="21"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Width="160" Margin="823,100,0,0" Height="627" VerticalAlignment="Top">
                <Image Style="{StaticResource CustomFont}" Source="/image/D12.png" Height="65"/>
                <TextBox Style="{StaticResource CustomFont}" x:Name="DiceCountTextBox_D12" Width="86" Margin="0,5" Height="18"/>
                <Button Style="{StaticResource CustomFont}" Content="Бросить кубики" Width="130" Click="RollDice_D12_Click" Margin="0,5" Height="21"/>
                <ItemsControl Style="{StaticResource CustomFont}" ItemStringFormat="Center"  x:Name="DiceItemsControl_D12" Height="380" Width="130"/>
                <TextBlock Style="{StaticResource CustomFont}" Margin="0,5" x:Name="ResultsTextBlock_D12" FontSize="16" Height="40" Width="150"/>
                <TextBlock Style="{StaticResource CustomFont}" x:Name="ResultsTextBlock_D12_Summ" FontSize="16" Height="40" Width="150"/>
                <Button Style="{StaticResource CustomFont}" Margin="0,5" Content="Очистить сумму" Width="130" Click="Clear_Result_Text_Block_D12" Height="21"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Width="160" Margin="663,100,0,0" Height="627" VerticalAlignment="Top">
                <Image Source="/image/D10.jpg" Height="65"/>
                <TextBox Style="{StaticResource CustomFont}" x:Name="DiceCountTextBox_D10" Width="86" Margin="0,5" Height="18"/>
                <Button Style="{StaticResource CustomFont}" Content="Бросить кубики" Width="130" Click="RollDice_D10_Click" Margin="0,5" Height="21"/>
                <ItemsControl Style="{StaticResource CustomFont}" ItemStringFormat="Center"  x:Name="DiceItemsControl_D10" Height="380" Width="113"/>
                <TextBlock Style="{StaticResource CustomFont}" Margin="0,5" x:Name="ResultsTextBlock_D10" FontSize="14" Height="40" Width="150" Text=""/>
                <TextBlock Style="{StaticResource CustomFont}" x:Name="ResultsTextBlock_D10_summ" FontSize="14" Height="40" Width="150" Text=""/>
                <Button Style="{StaticResource CustomFont}" Margin="0,5" Content="Очистить сумму" Width="130" Click="Clear_Result_Text_Block_D10" Height="21"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Width="160" Margin="498,100,0,0" Height="627" VerticalAlignment="Top">
                <Image Source="/image/D8.jpg" Height="65" Width="160"/>
                <TextBox Style="{StaticResource CustomFont}" x:Name="DiceCountTextBox_D8" Width="86" Margin="0,5" Height="18"/>
                <Button Style="{StaticResource CustomFont}"  Content="Бросить кубики" Width="130" Click="RollDice_D8_Click" Margin="0,5" Height="21"/>
                <ItemsControl  Style="{StaticResource CustomFont}" ItemStringFormat="Center"  x:Name="DiceItemsControl_D8" Height="380" Width="109"/>
                <TextBlock Style="{StaticResource CustomFont}" Margin="0,5" x:Name="ResultsTextBlock_D8" FontSize="14" Height="40" Width="150"/>
                <TextBlock Style="{StaticResource CustomFont}" x:Name="ResultsTextBlock_D8_summ" FontSize="14" Height="40" Width="150"/>
                <Button Style="{StaticResource CustomFont}" Margin="0,5" Content="Очистить сумму" Width="130" Click="Clear_Result_Text_Block_D8" Height="21"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Width="160" Margin="177,100,0,0" Height="636" VerticalAlignment="Top">
                <Image Source="/image/D4.jpg" Height="65" Width="146"/>
                <TextBox Style="{StaticResource CustomFont}" x:Name="DiceCountTextBox_D4" Width="86" Margin="0,5" Height="18"/>
                <Button Style="{StaticResource CustomFont}" Content="Бросить кубики" Width="130" Click="RollDice_D4_Click" Margin="0,5" Height="21"/>
                <ItemsControl Style="{StaticResource CustomFont}" ItemStringFormat="Center"   x:Name="DiceItemsControl_D4" Height="379" Width="121"/>
                <TextBlock Style="{StaticResource CustomFont}"  Margin="0,5" x:Name="ResultsTextBlock_D4" FontSize="16" Height="41" Width="150"/>
                <TextBlock Style="{StaticResource CustomFont}" Grid.Column="2" x:Name="ResultsTextBlock_D4_summ" FontSize="14" Height="41" Width="150"/>
                <Button Style="{StaticResource CustomFont}" Margin="0,5" Content="Очистить сумму" Width="130" Click="Clear_Result_Text_Block_D4" Height="21"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Window>
