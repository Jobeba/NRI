<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Системные стили -->
    <Style x:Key="SystemBackgroundStyle" TargetType="Grid">
        <Style.Triggers>
            <DataTrigger Binding="{Binding SelectedCharacter.System}" Value="D&amp;D 5e">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#0A3A0A" Offset="0"/>
                            <GradientStop Color="#2E7D32" Offset="0.5"/>
                            <GradientStop Color="#1B5E20" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger Binding="{Binding SelectedCharacter.System}" Value="Pathfinder">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#0D1C3D" Offset="0"/>
                            <GradientStop Color="#1565C0" Offset="0.5"/>
                            <GradientStop Color="#0D47A1" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#2196F3" BlurRadius="15" Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger Binding="{Binding SelectedCharacter.System}" Value="Call of Cthulhu">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#2A0A3A" Offset="0"/>
                            <GradientStop Color="#7B1FA2" Offset="0.5"/>
                            <GradientStop Color="#4A148C" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#9C27B0" BlurRadius="25" Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>
