<Window x:Class="NRI.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NRI"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" 
        mc:Ignorable="d"
        Title="Регистрация" Height="420" Width="800">

    <Grid Background="#FFF4F5F7" HorizontalAlignment="Left" Width="802" Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="444.04"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="313*"/>
        </Grid.ColumnDefinitions>
        <Label Style="{StaticResource Monocraft_Medium}" Grid.Row="0" Grid.Column="1" Background="#00677E" Content="Регистрация" FontSize="25"  Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,404" HorizontalAlignment="Center" Width="626"/>
        <Label Style="{StaticResource CustomFont}" x:Name="Логин" Grid.Column="1" FontSize="14" Content="Логин" HorizontalAlignment="Left" Margin="149,151,0,0" VerticalAlignment="Top"/>
        <Label Style="{StaticResource CustomFont}" x:Name="Пароль" Grid.Column="1" FontSize="14" Content="Пароль" HorizontalAlignment="Left" Margin="149,0,0,0" VerticalAlignment="Center"/>
        <TextBox Style="{StaticResource CustomFont}" x:Name="LoginBox" Grid.Column="1" HorizontalAlignment="Left" Margin="225,155,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="18"/>
        <Button Style="{StaticResource CustomFont}" x:Name="Registrastion_button" Grid.Column="1" Content="Войти" HorizontalAlignment="Left" Margin="245,283,0,0" VerticalAlignment="Top" Width="90" Click="Registrastion_button_Click"/>
        <TextBox Style="{StaticResource CustomFont}"  x:Name="Passbox" Grid.Column="1" HorizontalAlignment="Left" Margin="225,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="150" Height="18"/>

        <TextBlock Style="{StaticResource CustomFont}" Margin="152,331,2,91" RenderTransformOrigin="0.644,0.667" FontSize="18" Grid.ColumnSpan="2" >
            Если вы, ещё не зарегистрировались, то <Hyperlink NavigateUri="Registrasya.xaml" Click="Hyperlink_click">можете тут зарегистрироваться </Hyperlink>
        </TextBlock>
        <Label Grid.Row="0" Background="#414A4C" RenderTransformOrigin="0.5,0.5" Height="160" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="180" Margin="0,0,0,284" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Label.RenderTransform>
            <Image gif:ImageBehavior.AnimatedSource="\image\Intellect_dice.gif"
                gif:ImageBehavior.RepeatBehavior="1"
                gif:ImageBehavior.AnimateInDesignMode="False"
                gif:ImageBehavior.AutoStart="True"              
                Height="149" Width="174" Stretch="UniformToFill" />
        </Label>
        <Button Content="Просмотр" x:Name="Add" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Width="156" Click="Add_click"/>
    </Grid>
</Window>
