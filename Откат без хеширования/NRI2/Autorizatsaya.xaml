<Window x:Class="NRI.Autorizatsaya"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NRI"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" 
        mc:Ignorable="d"
        Title="Регистрация" Height="420" Width="800">

    <Grid Background="#FFF4F5F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource Monocraft_Medium}" Grid.Row="0" Background="#00677E" Content="Регистрация" FontSize="25" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Style="{StaticResource CustomFont}" Content="Логин" FontSize="14"/>
            <TextBox Style="{StaticResource CustomFont}" x:Name="LoginBox" Width="150" Height="18"/>
            <Label Style="{StaticResource CustomFont}" Content="Пароль" FontSize="14"/>
            <PasswordBox Style="{StaticResource CustomFont}" x:Name="Passbox" Width="150" Height="18"/>
            <Button Margin="10" Style="{StaticResource CustomFont}" Content="Войти" Width="90" Command="{Binding RegistrationCommand}"/>
            <TextBlock Style="{StaticResource CustomFont}" FontSize="18">
                Если вы ещё не зарегистрировались, то <Hyperlink NavigateUri="Registrasya.xaml" Click="Hyperlink_Click">можете тут зарегистрироваться</Hyperlink>
            </TextBlock>
        </StackPanel>
        <Image gif:ImageBehavior.AnimatedSource="\image\Intellect_dice.gif"
                   gif:ImageBehavior.RepeatBehavior="1"
                   gif:ImageBehavior.AnimateInDesignMode="False"
                   gif:ImageBehavior.AutoStart="True"
                   Stretch="UniformToFill" Margin="616,5,10,212" Grid.Row="1"/>
    </Grid>
</Window>