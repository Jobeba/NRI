<Application x:Class="NRI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <Style x:Key="CustomFont">
            <Setter Property="TextElement.FontFamily"
         Value="/fonts/#Pixelizer Bold">
            </Setter>

        </Style>
        <Style x:Key="Monocraft_Medium">
            <Setter Property="TextElement.FontFamily"
                 Value="/fonts/#Monocraft Medium">
            </Setter>
        </Style>
        <Style x:Key="Dynastium_Regular">
            <Setter Property="TextElement.FontFamily"
         Value="/fonts/Dynastium Dotmatrix Regular">
            </Setter>
        </Style>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF1E1E1E" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="BorderBrush" Value="#FF007ACC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- Стиль для комбобоксов -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF1E1E1E" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="BorderBrush" Value="#FF007ACC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Application.Resources>
</Application>
