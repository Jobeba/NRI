                                <SplineDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="120" KeySpline="0.1,0.8,0.2,1"/>
                                <SplineDoubleKeyFrame KeyTime="0:0:0.5" Value="360" KeySpline="0.5,0,0.5,1"/>
