<Window x:Class="Bully_Maguire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="444" Width="400" Background="#F0F0F0">
    <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="20">
        <StackPanel Margin="20">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Логин:"/>
            <TextBox x:Name="LoginTextBox" Width="200" Margin="0,5" Padding="5" FontSize="14"/>

            <Label Content="Пароль:" Margin="0,20,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,5" Padding="5" FontSize="14"/>

            <Button Content="Войти" Width="200" Margin="0,20,0,0" Height="35" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Cursor="Hand" 
                    Click="LoginButton_Click"/>

            <TextBlock x:Name="ErrorMessage" Foreground="Red" Margin="0,10" 
                       Visibility="Collapsed" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Border>
</Window>