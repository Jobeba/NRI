<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NRI"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" x:Class="NRI.ChangePassword"
        mc:Ignorable="d"
        Title="Поменять пароль" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Style="{StaticResource CustomFont}" x:Name="NameOldPassword" Content="Текущий пароль" HorizontalAlignment="Left" FontSize="18" Margin="299,164,0,0" VerticalAlignment="Top"/>
        <Label Style="{StaticResource CustomFont}" x:Name="NameNewPassword" Content="Новый пароль" HorizontalAlignment="Left" FontSize="18" Margin="317,207,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.856,0.412"/>
        <Label Style="{StaticResource CustomFont}" x:Name="NameConfirmNewPassword" Content="Подтверждение нового пароля" HorizontalAlignment="Left" FontSize="18" Margin="181,249,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OldPassword" HorizontalAlignment="Left" Margin="466,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="NewPassword" HorizontalAlignment="Left" Margin="466,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="150" RenderTransformOrigin="0.442,0.586"/>
        <TextBox x:Name="ConfirmNewPassword" HorizontalAlignment="Left" Margin="466,255,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
        <Button Style="{StaticResource CustomFont}" x:Name="ChangePassword_button" Content="Изменить пароль" HorizontalAlignment="Left" FontSize="18" Margin="411,302,0,0" VerticalAlignment="Top" Width="142" Click="ChangePassword_button_Click" Height="31"/>
        <Label Style="{StaticResource Monocraft_Medium}" Grid.Row="0" Background="#00677E" Content="Смена пароля" FontSize="25"  Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="636" Height="40" VerticalAlignment="Top"/>
        <Label Grid.Row="0" Grid.Column="0" Background="#414A4C" Margin="0,0,636,0" HorizontalAlignment="Right" Width="164" Height="169" VerticalAlignment="Top" >
            <Image gif:ImageBehavior.AnimatedSource="/image/Intellect_dice.gif"
                gif:ImageBehavior.RepeatBehavior="1"
                gif:ImageBehavior.AnimateInDesignMode="False"
                gif:ImageBehavior.AutoStart="True"              
                Height="163" Width="160" Stretch="UniformToFill" />
        </Label>
        <StackPanel Grid.Column="0" Background="#483C32" Margin="0,169,636,0" Height="265" VerticalAlignment="Top" HorizontalAlignment="Right" Width="164" />
        <TextBlock Style="{StaticResource CustomFont}" HorizontalAlignment="Left" Margin="164,0,0,330" TextWrapping="Wrap"  FontSize="18"  Text="Помните, что каждый раз когда меняете пароль, то его надо и в памяти менять!" VerticalAlignment="Bottom"  Width="636" AutomationProperties.IsOffscreenBehavior="Offscreen" Height="64" />
    </Grid>
</Window>
