<Window x:Class="NRI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NRI"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" 
        mc:Ignorable="d"
        Title="NRI" Height="450" Width="800">
    <Window.Background>
        <VisualBrush>
            <VisualBrush.Visual>
                <Image gif:ImageBehavior.AnimatedSource="image/camp.gif" />
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Center" Width="800" Height="434" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="434.04"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource Monocraft_Medium}" Grid.Row="0" Background="#00677E" Content="Интеллектуальный Клуб Настольных Ролевых Игр" FontSize="20" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" HorizontalAlignment="Center" Width="620" Height="40" VerticalAlignment="Top"/>
            <Label Grid.Row="0" Background="Black" Margin="0,0,0,246" HorizontalAlignment="Center" Width="180" Height="188" VerticalAlignment="Bottom" >
                <Label Background="Black" RenderTransformOrigin="0.5,0.5" Height="188" VerticalAlignment="Top" HorizontalAlignment="Left" Width="186" >
                    <Image gif:ImageBehavior.AnimatedSource="/image/Intellect_dice.gif"
                        gif:ImageBehavior.RepeatBehavior="1"
                        gif:ImageBehavior.AnimateInDesignMode="False"
                        gif:ImageBehavior.AutoStart="True"              
                        Height="177" Width="176" Stretch="UniformToFill" />
                </Label>
            </Label>
            <StackPanel Grid.Column="0" Background="#483C32" Margin="0,188,0,0" Height="246" VerticalAlignment="Top" HorizontalAlignment="Right" Width="180" >
                <Button Style="{StaticResource CustomFont}" Content="Мероприятие" Background="#00A86B"  FontSize="16" BorderBrush="#002800" Cursor="Hand" Click="Projects_Click" Foreground="#0A0A0A"/>
                <Button Style="{StaticResource CustomFont}" Content="Игроки" Background="#00A86B"  FontSize="16" Margin="0,10,0,0" BorderBrush="#002800" Cursor="Hand" Click="Players_Click" Foreground="#0A0A0A"/>
                <Button Style="{StaticResource CustomFont}" Content="Сотрудники" Background="#00A86B" FontSize="16" Margin="0,10,0,0" BorderBrush="#002800" Cursor="Hand" Click="Staff_Click" Foreground="#0A0A0A"/>
                <Button Style="{StaticResource CustomFont}" Content="Отзывы" Background="#00A86B"  FontSize="16" Margin="0,10,0,0" BorderBrush="#002800" Cursor="Hand" Click="Reviews_Click" Foreground="#0A0A0A"/>
                <Button Style="{StaticResource CustomFont}" Content="Сеттинг" Background="#00A86B" FontSize="16" Margin="0,10,0,0" BorderBrush="#002800" Cursor="Hand" Foreground="#0A0A0A" Click="Setting_Click" />
                <Button Style="{StaticResource CustomFont}" Content="Броски" Background="#00A86B"  FontSize="16" Margin="0,10,0,0" BorderBrush="#002800" Cursor="Hand" Foreground="#0A0A0A" Click="DiceRoller_Click"/>
                <Button Style="{StaticResource CustomFont}" Content="Завершить работу" Background="#00A86B" FontSize="16" Margin="0,10,0,0" BorderBrush="#002800" Cursor="Hand" Foreground="#0A0A0A" Click="Showdown_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

