<Window x:Class="DBNotary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="200" Width="300">
    <Grid>
        <Label Content="Имя пользователя:" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtUsername" VerticalAlignment="Top" Margin="10,30,10,0"/>

        <Label Content="Пароль:" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <PasswordBox x:Name="txtPassword" VerticalAlignment="Top" Margin="10,90,10,0"/>

        <Button Content="Войти" VerticalAlignment="Top" Margin="10,130,10,0" Click="btnLogin_Click"/>
    </Grid>
</Window>
