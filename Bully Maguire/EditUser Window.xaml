<Window x:Class="Bully_Maguire.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" Height="450" Width="642" Background="#F0F0F0">
    <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="20">
        <StackPanel Margin="20">
            <TextBlock Text="Редактирование пользователя" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Логин:"/>
            <TextBox x:Name="LoginTextBox" Margin="0,5" FontSize="14"/>

            <Label Content="Роль:" Margin="0,20,0,0"/>
            <TextBox x:Name="RoleTextBox" Margin="0,5" FontSize="14"/>

            <Button Content="Сохранить изменения" Width="200" Margin="0,20,0,0" Height="35" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Cursor="Hand" 
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Border>
</Window>
